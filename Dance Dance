-- Creating playlist of Queen songs only.
select title
from songs
where artist = 'Queen';

-- Creating playlist of pop genre only
select name 
from artists
where genre = "Pop";

-- Querying titles 
select title
from songs 
WHERE artist IN (SELECT name FROM artists WHERE genre ='Pop');
