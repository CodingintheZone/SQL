-- Querying owned stocks in Fidelity only
SELECT * 
FROM stocks WHERE NOT shares_owned IS NULL
	AND acct_name = 'Fidelity'
ORDER BY shares_owned DESC;

-- Aggregating Data: Total shares owned
SELECT acct_name, SUM(shares_owned)
FROM stocks
GROUP BY acct_name;
