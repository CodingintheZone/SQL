#Joining Tables
SELECT p.name, h.name
FROM persons p
JOIN hobbies h 
ON p.id = h.person_id;

#Additional single query
SELECT p.name, h.name
FROM persons p
JOIN hobbies h 
ON p.id = h.person_id
WHERE p.name='Bobby McBobbyFace';
